def merge_sort(arr):
    if len(arr) > 1:
        mid = len(arr) // 2
        left, right = arr[:mid], arr[mid:]
        merge_sort(left)
        merge_sort(right)
        i = j = k = 0
        while i < len(left) and j < len(right):
            if left[i] < right[j]:
                arr[k] = left[i]
                i += 1
            else:
                arr[k] = right[j]
                j += 1
            k += 1
        while i < len(left):
            arr[k] = left[i]
            i += 1
            k += 1
        while j < len(right):
            arr[k] = right[j]
            j += 1
            k += 1
# Test Cases
test_cases = [
    ([31, 23, 35, 27, 11, 21, 15, 28], "Output: 11, 15, 21, 23, 27, 28, 31, 35"),
    ([22, 34, 25, 36, 43, 67, 52, 13, 65, 17], "Output: 13, 17, 22, 25, 34, 36, 43, 52, 65, 67")
]
for arr, expected in test_cases:
    merge_sort(arr)
    print(f"Sorted Array: {arr}, {expected}")
# output:
Sorted Array: [11, 15, 21, 23, 27, 28, 31, 35], Output: 11, 15, 21, 23, 27, 28, 31, 35
Sorted Array: [13, 17, 22, 25, 34, 36, 43, 52, 65, 67], Output: 13, 17, 22, 25, 34, 36, 43, 52, 65, 67
